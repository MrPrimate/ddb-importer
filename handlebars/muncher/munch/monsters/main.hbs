<section id="ddb-importer-muncher-monster-import" class="tab ddb-muncher {{ tab.cssClass }} {{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">

  <fieldset>
  <legend>Monster Name Filter</legend>
  <p>Monster Search Filter (leave blank for all - case insensitive)</p>

  <div class="form-content" style="display: flex">
    <input type="text" name="monster-munch-filter" id="monster-munch-filter" style="flex: 0 1 auto" value="{{ searchTermMonster }}" />
  </div>

    {{#each filterMonsterConfig}}
    <div class="form-group munching-monster-config-filter">
      <label>{{ this.label }}</label>
      <div class="form-fields">
        <dnd5e-checkbox name="{{this.name}}" id="{{this.name}}" {{#if this.isChecked}}checked{{/if}}
        data-section="{{this.name}}" {{#if this.enabled}}enabled{{else}}disabled{{/if}}></dnd5e-checkbox>
      </div>
      <p class="hint">{{{this.hint}}}</p>
    </div>
    {{/each}}

  </fieldset>

  <fieldset>
  <legend>Monster Type Filter</legend>
  <p>Filter by Monster Type (Leave blank for all)</p>
  <div class="form-fields" id="munch-excluded-config">
    <multi-select id="muncher-monster-types-select" name="muncher-monster-types-select">
      {{#each monsterTypes}}
      <option value="{{this.id}}" {{this.selected}}> {{this.label}}</option>
      {{/each}}
    </multi-select>
  </div>
  </fieldset>

  <fieldset>
  <legend>Homebrew Filter</legend>
  <div class="munching-monster-config-homebrew form-fields">
    {{#each homebrewMonsterConfig}}
    <div class="form-group munching-monster-config-homebrew">
      <label class="ddbimporter-long">{{ this.label }}</label>
      <div class="form-fields">
        <dnd5e-checkbox name="{{this.name}}" id="{{this.name}}" {{#if this.isChecked}}checked{{/if}}
        data-section="{{this.name}}" {{#if this.enabled}}enabled{{else}}disabled{{/if}}></dnd5e-checkbox>
      </div>
      <p class="hint">{{{this.hint}}}</p>
    </div>
    {{/each}}
  </fieldset>


  <button data-action="parseMonsters" type="button" id="munch-monsters-start" class="munch-button" {{#if tiers.all}}enabled{{else}}disabled{{/if}}>
    {{#if tiers.all}}Monster Munch!{{else}}Monster Munch for Patreon Supporters! (or run your own proxy){{/if}}
  </button>
  <button data-action="parseVehicles" type="button" id="munch-vehicles-start" class="munch-button" {{#if tiers.supporter}}enabled{{else}}disabled{{/if}}>
    {{#if tiers.experimentalMid}}[Experimental BETA] Vehicle Munch!{{else}}[Experimental BETA] Vehicle Munch for Undying+ Patreon Supporters!{{/if}}
  </button>

  <div style="text-align:center"><i>Make sure you have imported spells before Monsters!</i><br>
  Tokens will use default token settings.<br>
  <a href ="https://docs.ddb.mrprimate.co.uk/docs/faqs/ddb-importer#monsters-that-i-have-on-ddb-dont-import">All my monsters are not importing?</a>

  </div>

</section>
